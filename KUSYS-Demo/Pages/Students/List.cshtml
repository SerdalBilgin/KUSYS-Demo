@page
@model KUSYS_Demo.Pages.Students.ListModel
@{
    <title>List Student</title>
}
<div class="bg-secondary bg-opacity-10 py-2 mb-4">
    <div class="container">
        <h1>LISTING STUDENTS</h1>
    </div>
</div>

@if (Model.students != null && Model.students.Any())
{
    <div class="container">
    <table class="table">
        <thead>
            <tr>
               
                <td>FirstName</td>
                <td>LastName</td>
                <td>BirtDate</td>
                <td>Update</td>
           
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.students)
            {
                <tr>
                    
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.BirthDate.ToShortDateString()</td>
                    <td><a href="/Students/Edit/@student.StudentId">Update</a></td>
                  
                </tr>
            }       
        </tbody>
    </table>

</div>
}else
{
        <div class="container">
            <p>Sayfa Bulunamadı öğrenci ekleyin!</p>
        </div>
}
